        app:layout_constraintStart_toEndOf="@+id/cube3"
        app:layout_constraintTop_toBottomOf="@id/cube2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/stopQuizButton"
        android:layout_width="wrap_content"
